@model TownTalk.Web.Models.Post

@{
    ViewData["Title"] = "Delete Post";
}

<h1>Delete Post</h1>

<h3>Are you sure you want to delete this post?</h3>

<div>
    <h4>Post Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">
            @(Model.Category?.Name ?? "No Category")
        </dd>

        <dt class="col-sm-2">Created By</dt>
        <dd class="col-sm-10">@(Model.User?.UserName ?? "Unknown")</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
